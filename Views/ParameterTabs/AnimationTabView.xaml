<UserControl x:Class="ParticleEditor.Views.ParameterTabs.AnimationTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:parameterTabs="clr-namespace:ParticleEditor.ViewModels.ParameterTabs"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.DataContext>
            <parameterTabs:AnimationTabViewModel/>
        </Grid.DataContext>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <StackPanel>
                <Label Content="Size"/>
                <Label Content="Velocity"/>
                <Label Content="Local velocity"/>
                <Label Content="External force"/>
                <Label Content="Color"/>
                <Label Content="Transparancy"/>
                <Label Content="Rotation"/>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="1">
            <StackPanel>
                <TextBox Text="1"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="0" Grid.Column="0"/>
                    <TextBox Text="0" Grid.Column="1"/>
                    <TextBox Text="0" Grid.Column="2"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="0" Grid.Column="0"/>
                    <TextBox Text="0" Grid.Column="1"/>
                    <TextBox Text="0" Grid.Column="2"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="0" Grid.Column="0"/>
                    <TextBox Text="0" Grid.Column="1"/>
                    <TextBox Text="0" Grid.Column="2"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBox Text="0" Grid.Column="0"/>
                    <TextBox Text="0" Grid.Column="1"/>
                    <TextBox Text="0" Grid.Column="2"/>
                </Grid>
                <TextBox Text="1"/>
                <TextBox Text="0"/>
            </StackPanel>

        </Grid>
        <Grid Grid.Column="2">
            <StackPanel>
                <Button Content="+" Height="26"/>
                <Button Content="+" Height="26"/>
                <Button Content="+" Height="26"/>
                <Button Content="+" Height="26"/>
                <Button Content="+" Height="26"/>
                <Button Content="+" Height="26"/>
                <Button Content="+" Height="26"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
