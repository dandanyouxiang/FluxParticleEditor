<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:ParticleEditor.Helpers"
             xmlns:parameterTabs="clr-namespace:ParticleEditor.ViewModels.ParameterTabs"
             x:Class="ParticleEditor.Views.ParameterTabs.BurstTabView"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" x:Name="UserControl">
    <Grid Name="Root">
        <Grid.DataContext>
            <parameterTabs:BurstTabViewModel/>
        </Grid.DataContext>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource AccentColorBrush}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Label Content="> TIME" Grid.Column="0" FontWeight="Bold" FontFamily="Segoe UI Semilight"/>
                <Label Content="> PARTICLES" Grid.Column="1" FontWeight="Bold" FontFamily="Segoe UI Semilight"/>
            </Grid>
            <Grid Grid.Row="1">
            <ListBox Name="ListBox" ItemsSource="{Binding ElementName=UserControl, Path=ParticleSystem.Bursts}" AlternationCount="200" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding Key}" Grid.Column="0"/>
                            <Label Content="{Binding Value}" Grid.Column="1"/>
                            <Button Content="-" Command="{Binding DataContext.RemoveBurstCommand, RelativeSource={RelativeSource AncestorType={x:Type ListBox}}}" CommandParameter="{Binding Key}" Grid.Column="2" ToolTip="Remove burst"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        <Grid Grid.Row="2">
            <Separator/>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="Text_Key" Text="0" Grid.Column="0"/>
            <TextBox x:Name="Text_Value" Text="0" Grid.Column="1"/>
            <Button Content="+" Command="{Binding AddBurstCommand}" Grid.Column="2" ToolTip="Add burst">
                <Button.CommandParameter>
                    <MultiBinding Converter="{helpers:BurstConverter}">
                        <Binding ElementName="Text_Key" Path="Text"/>
                        <Binding ElementName="Text_Value" Path="Text"/>
                    </MultiBinding>
                </Button.CommandParameter>
            </Button>
        </Grid>
    </Grid>
</UserControl>
