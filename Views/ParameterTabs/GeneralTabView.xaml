<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:ParticleEditor.Helpers"
             xmlns:views="clr-namespace:ParticleEditor.Views"
             x:Class="ParticleEditor.Views.ParameterTabs.GeneralTabView"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="300" x:Name="UserControl">
    <Grid>
        <StackPanel>
            <Expander IsExpanded="True" Header="System" BorderBrush="{x:Null}">
                <StackPanel>
                    <views:SingleControl ValueName="Duration" Value="{Binding ParticleSystem.Duration, Mode=TwoWay}" MaxValue="20"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Loop" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding ParticleSystem.Loop}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <views:SingleControl ValueName="Lifetime" Value="{Binding ParticleSystem.Lifetime, Mode=TwoWay}" MaxValue="20"/>
                    <views:SingleControl ValueName="Lifetime variance" Value="{Binding ParticleSystem.LifetimeVariance, Mode=TwoWay}" MaxValue="20"/>
                    <views:SingleControl ValueName="Start velocity" Value="{Binding ParticleSystem.StartVelocity, Mode=TwoWay}" MinValue="-100" MaxValue="100"/>
                    <views:SingleControl ValueName="Start velocity variance" Value="{Binding ParticleSystem.StartVelocityVariance, Mode=TwoWay}" MinValue="0" MaxValue="200"/>
                    <views:SingleControl ValueName="Start size" Value="{Binding ParticleSystem.StartSize, Mode=TwoWay}" MinValue="0" MaxValue="10"/>
                    <views:SingleControl ValueName="Start size variance" Value="{Binding ParticleSystem.StartSizeVariance, Mode=TwoWay}" MinValue="0" MaxValue="10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Random start rotation" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding ParticleSystem.RandomStartRotation}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Play on awake" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding ParticleSystem.PlayOnAwake}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="True" Header="Emission" BorderBrush="{x:Null}">
                <StackPanel>
                    <views:SingleControl ValueName="Max particles" Value="{Binding ParticleSystem.MaxParticles, Mode=TwoWay}" MinValue="0" MaxValue="10000" Sensitivity="1"/>
                    <views:SingleControl ValueName="Emission" Value="{Binding ParticleSystem.Emission, Mode=TwoWay}" MinValue="0" MaxValue="1000" Sensitivity="1"/>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="True" Header="Shape" BorderBrush="{x:Null}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Shape" Grid.Column="0"/>
                        <ComboBox Grid.Column="1" SelectedIndex="{Binding ParticleSystem.Shape.ShapeType, Converter={helpers:EnumToInt}}" ToolTip="The emission shape of the system">
                            <Label Content="Circle"/>
                            <Label Content="Sphere"/>
                            <Label Content="Cone"/>
                            <Label Content="Edge"/>
                        </ComboBox>
                    </Grid>
                    <views:SingleControl ValueName="Radius" Value="{Binding ParticleSystem.Shape.Radius, Mode=TwoWay}" MinValue="0" MaxValue="50" Sensitivity="0.2"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Emit from shell" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding ParticleSystem.Shape.EmitFromShell}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Emit from volume" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding ParticleSystem.Shape.EmitFromVolume}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <views:SingleControl ValueName="Radius" Value="{Binding ParticleSystem.Shape.Angle, Mode=TwoWay}" MinValue="0" MaxValue="90" Sensitivity="1"/>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
