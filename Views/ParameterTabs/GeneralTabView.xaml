<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:ParticleEditor.Helpers"
             xmlns:parameterTabs="clr-namespace:ParticleEditor.ViewModels.ParameterTabs"
             xmlns:Custom="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ParticleEditor.Views.ParameterTabs.GeneralTabView"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="300">
    <Grid>

        <Grid.Resources>
            <helpers:EnumToInt x:Key="EnumConverter"/>
        </Grid.Resources>

        <Grid.DataContext>
            <parameterTabs:GeneralTabViewModel/>
        </Grid.DataContext>

        <StackPanel>
            <Expander IsExpanded="True" Background="#CCD6D6D6" Header="System" BorderBrush="{x:Null}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Duration" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.Duration}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Loop" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding MainViewModel.ParticleSystem.Loop}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Lifetime" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.Lifetime}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Lifetime variance" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.LifetimeVariance}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Start velocity" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.StartVelocity}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Start velocity variance" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.StartVelocityVariance}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Start size" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.StartSize}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Start size variance" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.StartSizeVariance}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Random start rotation" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding MainViewModel.ParticleSystem.RandomStartRotation}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Play on awake" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding MainViewModel.ParticleSystem.PlayOnAwake}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="True" Background="#CCD6D6D6" Header="Emission" BorderBrush="{x:Null}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Max particles" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.MaxParticles}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Emission" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.Emission}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Expander>
            <Expander IsExpanded="True" Background="#CCD6D6D6" Header="Shape" BorderBrush="{x:Null}">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Shape" Grid.Column="0"/>
                        <ComboBox Grid.Column="1" SelectedIndex="{Binding MainViewModel.ParticleSystem.Shape.ShapeType, Converter={StaticResource EnumConverter}}">
                            <Label Content="Circle"/>
                            <Label Content="Sphere"/>
                            <Label Content="Cone"/>
                            <Label Content="Edge"/>
                        </ComboBox>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Radius" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.Shape.Radius}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Emit from shell" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding MainViewModel.ParticleSystem.Shape.EmitFromShell}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Emit from volume" Grid.Column="0"/>
                        <CheckBox IsChecked="{Binding MainViewModel.ParticleSystem.Shape.EmitFromVolume}" Grid.Column="1" HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Content="Angle" Grid.Column="0"/>
                        <TextBox Text="{Binding MainViewModel.ParticleSystem.Shape.Angle}" Grid.Column="1" HorizontalContentAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
