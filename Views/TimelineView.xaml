<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ParticleEditor.Views"
             xmlns:viewModels="clr-namespace:ParticleEditor.ViewModels"
             xmlns:ControlzEx="clr-namespace:ControlzEx;assembly=MahApps.Metro" x:Class="ParticleEditor.Views.TimelineView"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="600" x:Name="UserControl">
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="{DynamicResource AccentColorBrush}">
            <Label Content="TIMELINE" FontFamily="Segoe UI Semilight" Foreground="White"/>
        </Grid>
        <Grid Name="TimelineGrid" Grid.Row="1"/>
    </Grid>
</UserControl>

